<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gm3s.erp.gm3srest.View.Registro"
    android:scaleType = "centerCrop"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="112dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/relativeLayout2">


        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/input_a2_1"
            android:textColor="#09c"
            android:inputType="text"
            android:textCursorDrawable="@null"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/company2"
            android:hint="Clave de Empresa"
            android:textColorHint="#cccccc"/>





        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/input_a2_2"
            android:textColor="#09c"
            android:textCursorDrawable="@null"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/user"
            android:hint="Clave de Usuario"
            android:textColorHint="#cccccc"
            android:layout_below="@+id/input_a2_1" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/input_a2_3"
            android:layout_marginRight="30dp"
            android:textColor="#09c"
            android:textCursorDrawable="@null"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/password"
            android:hint="ContraseÃ±a"
            android:textColorHint="#cccccc"
            android:layout_below="@+id/input_a2_2"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_marginRight="30dp"
            android:layout_height="60dp"
            android:id="@+id/input_a2_4"
            android:textColor="#09c"
            android:textCursorDrawable="@null"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/email"
            android:hint="Correo Electronico"
            android:textColorHint="#cccccc"
            android:layout_below="@+id/input_a2_3"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/input_a2_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

       </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignLeft="@+id/relativeLayout2"
        android:layout_alignStart="@+id/relativeLayout2"
        android:layout_alignRight="@+id/relativeLayout2"
        android:layout_alignEnd="@+id/relativeLayout2">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/a2_6"
            android:id="@+id/input_a2_6"
            android:background="@drawable/button_style"
            style="@style/DefaultButtonText"
            android:textSize="30sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>

</RelativeLayout>
