<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gm3s.erp.gm3srest.View.Registro"
    android:scaleType = "centerCrop"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_marginTop="100dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/linear_layout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="170dp"
        android:id="@+id/relativeLayout">



        <EditText
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_a2_1"
            android:textColor="#09c"
            android:inputType="text"
            android:layout_width="250dp"
            android:textCursorDrawable="@null"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/company2"
            android:hint="Clave de Empresa"
            android:textColorHint="#cccccc"/>





        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_a2_2"
            android:textColor="#09c"
            android:textCursorDrawable="@null"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/user"
            android:hint="Clave de Usuario"
            android:textColorHint="#cccccc"
            android:layout_below="@+id/input_a2_1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_a2_3"
            android:textColor="#09c"
            android:textCursorDrawable="@null"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/password"
            android:hint="ContraseÃ±a"
            android:textColorHint="#cccccc"
            android:layout_below="@+id/input_a2_2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_height="wrap_content"
            android:id="@+id/input_a2_4"
            android:layout_width="250dp"
            android:textColor="#09c"
            android:textCursorDrawable="@null"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/email"
            android:hint="Correo Electronico"
            android:textColorHint="#cccccc"
            android:layout_below="@+id/input_a2_3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

       </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:id="@+id/linearLayout">


        <Button
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="@string/a2_6"
            android:id="@+id/input_a2_6"
            android:background="@drawable/button_style"
            style="@style/DefaultButtonText"
            android:layout_marginBottom="392dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>

</RelativeLayout>
