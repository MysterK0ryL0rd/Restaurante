<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"     android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"     tools:context="com.gm3s.erp.gm3srest.View.Registro"
        android:background="@android:color/white">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_layout"
        android:layout_marginBottom="30dp"
        android:id="@+id/relativeLayout">




        <EditText
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/input_a2_1"
            android:inputType="text"
            android:layout_width="250dp"
            android:textColor="#09c"
            android:textCursorDrawable="@null"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/company2"
            android:hint="Clave de Empresa"
            android:textColorHint="#cccccc"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />





        <EditText
            android:layout_width="250dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_a2_2"
            android:textColor="#09c"
            android:textCursorDrawable="@null"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/user"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Clave de Usuario"
            android:textColorHint="#cccccc"
            android:layout_below="@+id/input_a2_1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_a2_3"
            android:layout_marginRight="20dp"
            android:textColor="#09c"
            android:textCursorDrawable="@null"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/password"
            android:hint="ContraseÃ±a"
            android:textColorHint="#cccccc"
            android:layout_below="@+id/input_a2_2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp" />

        <EditText
            android:layout_height="wrap_content"
            android:id="@+id/input_a2_4"
            android:layout_width="250dp"
            android:layout_marginRight="20dp"
            android:textColor="#09c"
            android:textCursorDrawable="@null"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/email"
            android:hint="Correo Electronico"
            android:textColorHint="#cccccc"
            android:layout_below="@+id/input_a2_3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/input_a2_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

       </RelativeLayout>



        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/a2_6"
            android:id="@+id/input_a2_6"
            android:background="@drawable/button_style"
            style="@style/DefaultButtonText"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="101dp"
            android:layout_marginEnd="101dp"
            android:layout_alignTop="@+id/relativeLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="92dp" />



        </LinearLayout>
    </RelativeLayout>
</ScrollView>
