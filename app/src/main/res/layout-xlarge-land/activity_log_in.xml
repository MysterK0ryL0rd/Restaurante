
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView"
    android:background="@drawable/back"
    tools:context=".LogIn">



    <RelativeLayout  android:layout_width="fill_parent"
        android:layout_height="fill_parent" >




        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/logo3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn_server"
            android:src="@drawable/server"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_style6"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2"
            android:gravity="center"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="300dp"
            android:layout_marginBottom="20dp">



            <EditText
                android:layout_height="wrap_content"
                android:id="@+id/server1"
                android:inputType="text"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/company2"
                android:textColor="#424b5c"
                android:fontFamily="sans-serif-thin"
                android:textSize="40sp"
                android:textCursorDrawable="@null"
                android:background="@drawable/button_style5"
                android:hint="N.Clave de Empresa"
                android:textColorHint="#cccccc"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
           />

            <EditText
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/server2"
                android:inputType="text"
                android:layout_width="match_parent"
                android:textColor="#424b5c"
                android:textCursorDrawable="@null"
                android:background="@drawable/button_style5"
                android:drawableLeft="@drawable/user"
                android:layout_below="@+id/server1"
                android:hint="Clave de Usuario"
                android:textColorHint="#cccccc"
                android:fontFamily="sans-serif-thin"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="40sp" />

            <EditText
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/server3"
                android:layout_width="match_parent"
                android:textColor="#424b5c"
                android:textCursorDrawable="@null"
                android:background="@drawable/button_style5"
                android:drawableLeft="@drawable/password"
                android:layout_below="@+id/server2"
                android:hint="ContraseÃ±a"
                android:fontFamily="sans-serif-thin"
                android:textColorHint="#cccccc"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="20dp"
                android:textSize="40sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/server3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView24" />

            <Button
                android:background="@drawable/button_style6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a1_4"
                android:id="@+id/input_a1_4"
                style="@style/DefaultButtonText2"
                android:textSize="30sp"
                android:layout_gravity="center_horizontal"
                android:layout_alignTop="@+id/textView24"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No estas registrado   "
                android:id="@+id/textView22"
                android:fontFamily="sans-serif-light"
                android:textColor="#ffffff"
                android:layout_below="@+id/input_a1_4"
                android:layout_alignLeft="@+id/textView24"
                android:layout_alignStart="@+id/textView24"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="false"
                android:textSize="20sp" />


        </RelativeLayout>

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="128px"
            android:layout_height="128px"
            android:id="@+id/loader"
            android:src="@drawable/loader"
            android:visibility="visible"
            android:layout_below="@+id/relativeLayout2"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>





</ScrollView>