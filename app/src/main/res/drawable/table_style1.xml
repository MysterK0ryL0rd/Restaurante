<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape >
            <solid android:color="#4cbee8" />

            <stroke
                android:width="3dp"
                android:color="#4cbee8"/>
            <corners
                android:radius="30dp" />

        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF"/>
            <stroke
                android:width="5dp"
                android:color="#FFFFFF" />
            <corners
                android:radius="5dp" />

        </shape>
    </item>
</selector>