<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false" >
        <shape >
            <solid android:color="#262626" />

            <stroke
                android:width="3dp"
                android:color="#626262"/>

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape >
            <gradient
                android:startColor="#4cbee8"
                android:centerColor="#4cbee8"
                android:endColor="#d2d2d2"
                android:angle="270" />

            <stroke
                android:width="3dp"
                android:color="#FFFFFF"/>



        </shape>
    </item>
    <item>
        <shape>
           <!-- <solid android:color="#347DBB"/>-->
            <solid android:color="#3D6AB3" />

            <stroke
                android:width="1dp"
                android:color="#3D6AB3"/>
           <corners android:topLeftRadius="0.0dp" android:topRightRadius="6dp"
            android:bottomLeftRadius="0.0dp" android:bottomRightRadius="6dp" /> />
        </shape>
    </item>


</selector>

