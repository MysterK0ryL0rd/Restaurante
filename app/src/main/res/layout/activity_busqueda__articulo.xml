<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gm3s.erp.gm3srest.View.Busqueda_Articulo"
    android:background="@drawable/back">

    <include android:id="@+id/app_bar" layout="@layout/main_layout" android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout7"
        android:layout_below="@+id/app_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_style7">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:id="@+id/textView44"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/ac_bus_art_nom"
                android:background="@drawable/button_style5"
                android:textColor="#424b5c"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N. Corto"
                android:id="@+id/textView45"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ac_bus_art_nomc"
                android:background="@drawable/button_style5"
                android:textColor="#424b5c"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Codigo SKU    "
                android:id="@+id/textView46"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ac_bus_art_cod"
                android:background="@drawable/button_style5"
                android:textColor="#424b5c"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar"
                android:id="@+id/ac_bus_art_btn_bus"
                style="@style/DefaultButtonText2"
                android:background="@drawable/button_style4"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />
        </TableRow>

    </TableLayout>


    <ScrollView
        android:id="@+id/scrollview_prueba"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal|vertical"
        android:layout_width="fill_parent"
        android:scrollbarStyle="outsideInset"
        android:fillViewport="true"
        android:layout_below="@+id/tableLayout7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <HorizontalScrollView
            android:id="@+id/horizontalview_prueba"
            android:layout_height="match_parent"
            android:scrollbars="horizontal|vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="5dip">


            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tabla_prueba"
                android:layout_height="wrap_content" android:layout_width="match_parent"
                android:background="#ffffff">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre Corto"
                    android:id="@+id/textView47"
                    style="@style/TableHeader"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio Base"
                    android:id="@+id/textView48"
                    style="@style/TableHeader"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modificar"
                    android:id="@+id/textView49"
                    style="@style/TableHeader"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eliminar"
                    android:id="@+id/textView50"
                    style="@style/TableHeader" />

                </TableRow>
            </TableLayout>

        </HorizontalScrollView>
    </ScrollView>

</RelativeLayout>
