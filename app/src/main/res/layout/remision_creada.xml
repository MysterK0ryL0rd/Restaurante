<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626" >


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Enviar PDF Correo"
            android:id="@+id/rem_correo"
            style="@style/DefaultButtonText2"
            android:background="@drawable/button_style4"
            android:layout_above="@+id/rem_salir"
            android:layout_alignRight="@+id/rem_txt"
            android:layout_alignEnd="@+id/rem_txt"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:enabled="true" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Enviar Ticket BT"
            android:id="@+id/rem_blue"
            android:layout_gravity="center_horizontal"
            style="@style/DefaultButtonText2"
            android:background="@drawable/button_style4"
            android:layout_above="@+id/rem_pdf"
            android:layout_alignLeft="@+id/rem_txt"
            android:layout_alignStart="@+id/rem_txt"
            android:enabled="false" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Guardar PDF"
            android:id="@+id/rem_pdf"
            android:layout_gravity="center_horizontal"
            style="@style/DefaultButtonText2"
            android:background="@drawable/button_style4"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/rem_correo"
            android:layout_alignStart="@+id/rem_correo"
            android:layout_marginBottom="29dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:id="@+id/rem_salir"
            android:layout_gravity="center_horizontal"
            style="@style/DefaultButtonText2"
            android:background="@drawable/button_style4"
            android:layout_above="@+id/rem_blue"
            android:layout_alignLeft="@+id/rem_txt"
            android:layout_alignStart="@+id/rem_txt" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Guardar Ticket"
            android:id="@+id/rem_txt"
            android:layout_gravity="center_horizontal"
            style="@style/DefaultButtonText2"
            android:background="@drawable/button_style4"
            android:layout_above="@+id/rem_correo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="53dp" />
    </TableLayout>

</RelativeLayout>