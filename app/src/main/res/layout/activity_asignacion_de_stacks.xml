<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gm3s.erp.gm3srest.AsignacionDeStacks">

    <include android:id="@+id/app_bar" layout="@layout/main_layout" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ubicacion Rack"
            android:id="@+id/textView181"
            android:layout_marginLeft="20dp"
            android:autoText="false"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#6A6A6A" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:id="@+id/ubicacion_et"
            android:inputType="text"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittextstylestacks" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="SKU Articulo"
            android:id="@+id/textView182"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="#6A6A6A" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:id="@+id/articulo_et"
            android:inputType="number"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittextstylestacks" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:id="@+id/btnguardarAsignacion"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="#039BE7"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp" />

    </LinearLayout>

</RelativeLayout>
