<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.gm3s.erp.gm3srest.MenuCliente"
    android:gravity="center">

    <include android:id="@+id/app_bar" layout="@layout/main_layout" android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="*">




        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            android:background="#f6b231">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:background="#f6b231"
                android:weightSum="1"
                android:id="@+id/opc_menu_consultar"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="  Consultar"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.62"
                    android:textSize="30dp"
                    android:drawableLeft="@drawable/find_icon_0"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

            </LinearLayout>

        </TableRow>


        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            android:background="#10b2a4">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:weightSum="1"
                android:id="@+id/opc_menu_nuevo"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="  Nuevo"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.62"
                    android:textSize="30dp"
                    android:drawableLeft="@drawable/save_icon_0"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

            </LinearLayout>

        </TableRow>


    </TableLayout>


</LinearLayout>
